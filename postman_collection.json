{
  "info": {
    "name": "Google Ads AI Platform MVP",
    "description": "Complete API collection for testing",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api/v1"
    },
    {
      "key": "token",
      "value": "your_jwt_token_here"
    },
    {
      "key": "customer_id",
      "value": "1234567890"
    },
    {
      "key": "campaign_id",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "01. Authentication",
      "item": [
        {
          "name": "Get OAuth URL",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/auth/google/start"
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/auth/me"
          }
        }
      ]
    },
    {
      "name": "02. Customers",
      "item": [
        {
          "name": "List Customers",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/customers"
          }
        },
        {
          "name": "Select Customer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customerId\": \"{{customer_id}}\"\n}"
            },
            "url": "{{base_url}}/customers/select"
          }
        },
        {
          "name": "Refresh Customers",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/customers/refresh"
          }
        }
      ]
    },
    {
      "name": "03. Sync Jobs",
      "item": [
        {
          "name": "Sync Campaigns",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customerId\": \"{{customer_id}}\",\n  \"type\": \"sync_campaigns\"\n}"
            },
            "url": "{{base_url}}/jobs/sync"
          }
        },
        {
          "name": "Sync Metrics",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customerId\": \"{{customer_id}}\",\n  \"type\": \"sync_metrics_daily\"\n}"
            },
            "url": "{{base_url}}/jobs/sync"
          }
        },
        {
          "name": "Get Sync Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/jobs/sync/status?customerId={{customer_id}}"
          }
        }
      ]
    },
    {
      "name": "04. Campaigns",
      "item": [
        {
          "name": "List Campaigns",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/campaigns?customerId={{customer_id}}&limit=50"
          }
        },
        {
          "name": "Get Campaign",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/campaigns/{{campaign_id}}"
          }
        },
        {
          "name": "Get Campaign Metrics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/campaigns/{{campaign_id}}/metrics?range=30"
          }
        }
      ]
    },
    {
      "name": "05. Recommendations",
      "item": [
        {
          "name": "Generate Recommendations",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"campaignId\": \"{{campaign_id}}\",\n  \"types\": [\"keyword\", \"budget\"],\n  \"goal\": \"conversions\"\n}"
            },
            "url": "{{base_url}}/recommendations/generate"
          }
        },
        {
          "name": "List Recommendations",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/recommendations?status=draft"
          }
        },
        {
          "name": "Approve Recommendation",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/recommendations/{{recommendation_id}}/approve"
          }
        },
        {
          "name": "Deep Analysis",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"campaignId\": \"{{campaign_id}}\"\n}"
            },
            "url": "{{base_url}}/recommendations/analyze"
          }
        }
      ]
    },
    {
      "name": "06. Apply Operations",
      "item": [
        {
          "name": "Dry Run",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/apply/recommendations/{{recommendation_id}}/dry-run"
          }
        },
        {
          "name": "Apply Recommendation",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Idempotency-Key",
                "value": "{{$guid}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"confirmDryRun\": true\n}"
            },
            "url": "{{base_url}}/apply/recommendations/{{recommendation_id}}"
          }
        },
        {
          "name": "Get Apply Runs",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/apply/runs"
          }
        },
        {
          "name": "Get Audit Log",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/apply/audit?limit=100"
          }
        }
      ]
    }
  ]
}
